# AiTermy Configuration Example
# Copy this file to .env and fill in your values

# Required: Your OpenRouter API key (get from https://openrouter.ai/keys)
OPENROUTER_API_KEY="sk-or-v1-your-api-key-here"

# Required: AI model to use (see https://openrouter.ai/models for options)
OPENROUTER_MODEL="x-ai/grok-4.1-fast"

# Optional: Command name for the AI assistant (defaults to termy)
COMMAND_NAME="termy"

# Optional: Enable logging for debugging
LOGGING_ENABLED="false"

# Optional: Log file path
LOG_FILE="~/.aitermy/logs/aitermy.log"

# Optional: Enable automatic console output capture for AI context (enabled by default)
CONSOLE_OUTPUT_ENABLED="true"

# Optional: Maximum tokens for console output context (rough estimation: 4 chars = 1 token)
CONSOLE_OUTPUT_MAX_TOKENS="2000"

# Optional: Maximum number of recent console output items to include
CONSOLE_OUTPUT_MAX_ITEMS="10"
